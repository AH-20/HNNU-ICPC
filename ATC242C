#include<bits/stdc++.h>
#define ll long long 
#define x first
#define y second
#define pii pair<int,int>
using namespace std;
const ll mod=998244353;
int f[1000010][13];
int main(){
   int i,j,ans=0,n;
   cin>>n;
   for(i=1;i<=9;i++){
       f[1][i]=1;
   }
       for(j=2;j<=n;j++){
           for(i=1;i<=9;i++){
           if(i!=1) f[j][i]=(f[j][i]+f[j-1][i-1])%mod;
           if(i!=9) f[j][i]=(f[j][i]+f[j-1][i+1])%mod;
           f[j][i]=(f[j][i]+f[j-1][i])%mod;
       }
   }
   for(i=1;i<=9;i++)ans=(ans+f[n][i])%mod;
   cout<<ans<<endl;
    return 0;
}
